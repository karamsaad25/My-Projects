@model IEnumerable<CRUDStudent.Models.Student>

@{
    ViewBag.Title = "Student";
}

<h2>Student</h2>

<p>
    @Html.ActionLink("Create New", "AddStudent")
</p>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>
                <a href="@Url.Action("Index" , new { item.ID , item.FirstName, item.LastName , item.Email , item.Mobile})" class="btn btn-success" >Edit</a>
                <a href="@Url.Action("Delete" ,new { item.ID})" class="btn btn-danger">Delete</a>

            </td>
        </tr>

    }

</table>